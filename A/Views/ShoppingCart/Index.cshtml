@model  Tuple<List<A.Models.Product>, List<A.Models.ProductImage>>
@{
    ViewBag.Title = "Index";
}

<body>
    <h2>My shopping cart</h2>
    
    <div>
        <table class="table table-striped">
            <tr>
                <th>Product Name</th>
                <th></th>
                <th>Current Price</th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.Item1.Count; i++)
            {
                <tr>
                    <td>@Model.Item1[i].ProductName</td>
                    <td><img src="~/Images/@Model.Item2[i].ImageURL" style="overflow: hidden; position: relative; width:50px;" /></td>
                    <td>@Model.Item1[i].CurrentPrice</td>
                    <td>
                        <a href="@Url.Action("Bidding","BiddingHistory", new {id = Model.Item1[i].ProductID},null)" class="btn btn-danger btn-md" id="bid" target="_blank">

                            <span class="glyphicon glyphicon-plus"></span> Bid
                        </a>
                        <a href="@Url.Action("DeleteCartItem","ShoppingCart", new {id = Model.Item1[i].ProductID},null)" class="btn btn-danger btn-md" id="delete" >

                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>

